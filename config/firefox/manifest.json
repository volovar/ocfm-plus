{
  "manifest_version": 2,
  "name": "OCFM plus",
  "version": "2.0",

  "description": "Enhances overcast.fm with updates to the styling and layout",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://overcast.fm/*"],

      "css": ["ocfm-plus.css"],

      "js": ["jquery-2.1.4.min.js", "ocfm-plus.js"],

      "run_at": "document_start"
    }
  ]
}
