{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "declaration": false,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "types": ["@types/chrome", "@types/jquery"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
